<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="@dimen/button_vertical_inset"
    android:insetLeft="@dimen/button_horizontal_inset"
    android:insetRight="@dimen/button_horizontal_inset"
    android:insetTop="@dimen/button_vertical_inset">
  <shape android:shape="rectangle">
    <corners android:radius="@dimen/pill_corner_radius"/>
    <solid android:color="@color/colorAccent"/>
    <padding
        android:bottom="@dimen/button_vertical_padding"
        android:left="@dimen/button_horizontal_padding"
        android:right="@dimen/button_horizontal_padding"
        android:top="@dimen/button_vertical_padding"/>
  </shape>
</inset>