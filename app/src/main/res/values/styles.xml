<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/lightBackground</item>
    <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
  </style>

  <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
  <item name="android:windowTranslucentStatus">true</item>
  </style>>

  <style name="PrimaryColorButton" parent="TextAppearance.AppCompat.Button">
    <item name="android:textColor">@color/whiteText</item>
    <item name="android:background">@drawable/primary_color_button_selectable</item>
  </style>

  <style name="AccentColorPill" parent="TextAppearance.AppCompat.Button">
    <item name="android:textColor">@color/whiteText</item>
    <item name="android:background">@drawable/accent_color_pill_selectable</item>
  </style>

  <style name="ShareButton">
    <item name="android:foreground">?attr/selectableItemBackground</item>
  </style>

  <style name="IndexCardLine">
    <item name="android:minHeight">@dimen/index_card_min_height</item>
    <item name="android:gravity">bottom</item>
  </style>
</resources>
