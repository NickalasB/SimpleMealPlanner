<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/indexCardYellow"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout"
    >

  <TextView
      android:id="@+id/detail_recipe_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/common_margin"
      android:textSize="@dimen/title_text_size"
      tools:text="Details"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/indexCardRed"
      android:layout_marginTop="@dimen/common_margin_half"
      />

  <TextView
      android:id="@+id/detail_recipe_servings"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/common_margin"
      tools:text="Serves 4"
      style="@style/IndexCardLine"
      />

  <include layout="@layout/index_card_blue_line"/>

  <TextView
      android:id="@+id/detail_recipe_calories"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/common_margin"
      android:layout_marginTop="@dimen/common_margin_half"
      tools:text="Calories per serving: 456"
      style="@style/IndexCardLine"
      />

  <include layout="@layout/index_card_blue_line"/>

  <TextView
      android:id="@+id/detail_ingredients_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/common_margin_half"
      android:layout_marginStart="@dimen/common_margin"
      android:layout_marginTop="@dimen/common_margin_half"
      android:textSize="@dimen/headline_text_size"
      android:textStyle="bold"
      tools:text="Ingredients"
      style="@style/IndexCardLine"
      />

  <include layout="@layout/index_card_blue_line"/>

  <!-- Ingredients are added here dynamically from inflating ingredient_line layout-->

  <TextView
      android:id="@+id/detail_recipe_source"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/common_margin_half"
      android:gravity="center"
      android:textStyle="italic"
      tools:text="Source: ChowHound"
      style="@style/IndexCardLine"
      />

  <include layout="@layout/index_card_blue_line"/>

  <Button
      android:id="@+id/detail_recipe_link"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/common_margin"
      android:layout_marginStart="@dimen/common_margin"
      android:layout_marginTop="@dimen/common_margin_half"
      android:text="@string/detail_button_text"
      style="@style/PrimaryColorButton"
      />

</merge>