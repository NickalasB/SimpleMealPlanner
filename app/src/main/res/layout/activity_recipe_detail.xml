<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/detail_toolbar_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="true"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      >

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/detail_collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:collapsedTitleGravity="start|bottom"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        >

      <ImageView
          android:id="@+id/detail_recipe_image"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:adjustViewBounds="true"
          android:scaleType="fitEnd"
          android:fitsSystemWindows="true"
          app:layout_collapseMode="parallax"
          android:transitionName="@string/recipe_image_transition"
          tools:targetApi="lollipop"
          />

      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/detail_scrim_height"
          android:layout_gravity="bottom"
          android:layout_alignBottom="@+id/detail_recipe_image"
          android:background="@drawable/scrim_bottom"/>

      <androidx.appcompat.widget.Toolbar
          android:id="@+id/detail_toolbar"
          android:layout_width="match_parent"
          android:layout_height="@dimen/detail_tool_bar_height"
          app:layout_collapseMode="pin"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
          />
    </com.google.android.material.appbar.CollapsingToolbarLayout>

  </com.google.android.material.appbar.AppBarLayout>

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clipToPadding="false"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        >

      <LinearLayout
          android:id="@+id/details_linear_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingEnd="@dimen/common_margin_double"
          android:paddingStart="@dimen/common_margin_double"
          >

        <TextView
            android:id="@+id/detail_recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:textSize="@dimen/title_text_size"
            />

        <TextView
            android:id="@+id/detail_recipe_servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin"
            tools:text="Serves 4"
            />

        <TextView
            android:id="@+id/detail_recipe_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin_half"
            tools:text="Calories per serving: 456"
            />

        <TextView
            android:id="@+id/detail_ingredients_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_margin_half"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin_half"
            android:textStyle="bold"
            />

        <!-- Ingredients are added here dynamically from inflating ingredient_line layout-->

        <TextView
            android:id="@+id/detail_recipe_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Source: ChowHound"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginBottom="@dimen/common_margin_half"
            android:textStyle="italic"
            />

        <Button
            android:id="@+id/detail_recipe_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_margin"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin_half"
            android:text="@string/detail_button_text"
            style="@style/PrimaryColorButton"
            />

      </LinearLayout>
    </androidx.cardview.widget.CardView>
  </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
